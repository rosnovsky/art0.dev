generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Shorts {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  slug     String    @unique
  longUrl    String
  shortUrl     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clicks   Int
}
